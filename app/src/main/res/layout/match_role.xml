<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_ffcc00"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/roleLayout"
        android:layout_width="287dp"
        android:layout_height="400dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/role_animation_back">
        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/matching"
            android:textSize="20sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/white_btn_back"
        android:text="@string/go_to_hideseek"
        android:textSize="14sp"/>
</LinearLayout>