<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_ffcc00"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/roleLayout"
        android:layout_width="287dp"
        android:layout_height="400dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/role_animation_back">
    </RelativeLayout>

    <TextView
        android:id="@+id/roleTextView"
        android:layout_width="287dp"
        android:layout_height="30dp"
        android:layout_marginBottom="45dp"
        android:textColor="@color/white"
        android:text="@string/matching"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/brown_8a4713"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_btn_back"
        android:text="@string/go_to_hideseek"
        android:textSize="14sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>