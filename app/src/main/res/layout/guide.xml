<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/guide01"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150.5dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/guide_01"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/guide02"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:src="@drawable/guide_02"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/guide03"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_03"
        android:layout_above="@id/guide02"
        android:layout_alignLeft="@id/guide02"
        android:layout_marginLeft="-40dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/guide04"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_04"
        android:layout_marginBottom="220dp"
        android:paddingLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/guideArrow"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:layout_marginTop="45dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/guide05"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_05"
        android:layout_toLeftOf="@id/guideArrow"
        android:layout_below="@id/guideArrow"
        android:layout_marginTop="-20dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/submitImageView"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/guide_next"/>
</RelativeLayout>