<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/alphaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/gray_e1e1e0"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/gray_8e8d8b"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <dlmj.hideseek.UI.View.CircleNetworkImageView
            android:id="@+id/friendImageView"
            android:layout_width="43dp"
            android:layout_height="43dp"
            view:type="round"
            view:borderRadius="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/friendNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/roleImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/apple/Documents/Project/Android/HideSeek/app/src/main/res/layout/friend_item.xml -->